<h1>Portfolio Items</h1>

<%= link_to "Create New Item", new_portafolio_path %>

<% @portfolio_items.each do |portfolio_item| %>
  <p> <%= link_to portfolio_item.title, portafolio_path(portfolio_item.id) %> </p>
  <p> <%= portfolio_item.subtitle %> </p>
  <p> <%= portfolio_item.body %> </p>
  <%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil? %>
  <%= link_to "Edit Item", edit_portafolio_path(portfolio_item)  %>
  <!-- Other way to link
  <a href="portafolios/<%= portfolio_item.id %>/edit">Create a new Portfolio</a> 
  -->
<% end %>