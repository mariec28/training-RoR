<h1> Create new Portafolio </h1>
<%= form_with(model: @portafolio) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle %>
  </div>

   <div class="field">
    <%= form.label :string %>
    <%= form.text_field :string %>
   </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <ul>
    <%= form.fields_for :tecnologies do |technology_form| %>
    <li>
      <%= technology_form.label :name %>
      <%= technology_form.text_field :name %>
    </li>
    <% end %>
  </ul>
  
  <div class="field">
    <%= form.label :main_image %>
    <%= form.text_field :main_image %>
  </div>

  <div class="field">
    <%= form.label :thumb_image %>
    <%= form.text_field :thumb_image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
